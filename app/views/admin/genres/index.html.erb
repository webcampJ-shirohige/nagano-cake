<html>
  <body>
    <main>
      <p id= "notice"></p>
      <div class= "container">
        <div class= "row">
          <div class= "col-sm-12 px-sm-0 mx-auto">
            <h4>ジャンル機能</h4>
        
            <%= form_with model: @genre, url: admin_genres_path do |f| %>
              <p>ジャンル名</p>
              <%= f.text_field :name %>
        
              <div class= "form-group">
                <%= f.submit '新規登録', class:'btn btn-success' %>
              </div>
            <% end %>
        
            <h4>ジャンル</h4>
        
            <% @genres.each do |genre| %>
        
              <span><%= genre.name %></span>
        
              <%= link_to '編集する', edit_admin_genre_path(genre), class:'btn btn-success'  %>
        
            <% end %>
          </div>
          
        </div>
      </div>
    </main>
  </body>
</html>
