<div class="container">
  <h4>商品編集</h4>

  <%=form_with model: @item, url: admin_item_path, method: :patch do |f| %>

    <table>
      <tr>
        <th>商品画像</th>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :price_before_tax %>円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td><%= f.submit "変更を保存", class: "btn btn-sm btn-success rounded" %></td>
      </tr>
    </table>
  <% end %>
</div>