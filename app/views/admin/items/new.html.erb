<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row mt-5 ml-2">
    <h3>商品新規登録</h3>
  </div>

  <%= form_with model: @item, url: admin_items_path do |f| %>

  <div class="row mt-2">

    <div class="col-md-6 offset-md-3">
      <table class="table table-borderless">
        <tr>
          <th>商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th><%= f.label :name, "商品名" %></th>
          <td><%= f.text_field :name, autocomplete: "name", class:"form-control", placeholder: "商品名" %></td>
         </tr>
        <tr>
          <th><%= f.label :introduction, "商品説明" %></th>
          <td><%= f.text_area :introduction, autocomplete: "introduction", class:"form-control", placeholder: "ここに説明文を記述します" %></td>
        </tr>
        <tr>
          <th><%= f.label :genre_id, "ジャンル" %></th>
          <td class="selectbox-002 "><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :price_before_tax, "税抜価格" %></th>
          <td><%= f.text_field :price_before_tax, autocomplete: "price_before_tax", class:"form-control" %></td>
          <td>円</td>
        </tr>
        <tr>
          <th><%= f.label :is_selling_status, "販売ステータス" %></th>
          <td><%= f.label :is_selling_status, "販売中" %><%= f.radio_button :is_selling_status, :true %>
              <%= f.label :is_selling_status, "販売停止中" %><%= f.radio_button :is_selling_status, :false %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "新規登録", class: "btn btn-lg btn-success rounded"  %></td>
        </tr>
      </table>
    </div>
  </div>

  <% end %>
</div>
