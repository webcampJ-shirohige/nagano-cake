<div class="container">
  <h3>商品新規登録</h3>
  <%= form_with model: @item do |f| %>
  <table>
    <tr>
      <th>商品画像</th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th><%= f.label :name, "商品名" %></th>
      <td><%= f.text_field :name, autocomplete: "name" %></td>
    </tr>
    <tr>
      <th><%= f.label :introduction, "商品説明" %></th>
      <td><%= f.text_area :introduction, autocomplete: "introduction" %></td>
    </tr>
    <tr>
      <th><%= f.label :price_before_tax, "税抜価格" %></th>
      <td><%= f.text_field :price_before_tax, autocomplete: "price_before_tax" %></td>
    </tr>
    <tr>
      <th>販売ステータス</th>
    </tr>
  </table>
  <% end %>
</div>
