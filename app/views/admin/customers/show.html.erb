<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col">
  <h2> <%= @customer.last_name + @customer.first_name %> さんの会員詳細</h2>
  <table>
    <tbody>
    <tr>
      <th>会員id</th>
      <td></td>
      <td><%= @customer.id%></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td></td>
      <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td></td>
      <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td></td>
      <td><%= @customer.post_cord %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td></td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td></td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td></td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td></td>
      <td><% if @customer.is_active %>
            <p class="text-success">有効</p>
          <% else %>
            <p>退会</p>
          <% end %>
      </td>
    </tr>
  </table>
  <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
  <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>