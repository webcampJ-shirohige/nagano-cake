<%= render 'layouts/admin_header' %>
<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>会員id</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class:"text-dark"%></td>
            <td><%= customer.email %></td>
            <td><% if customer.is_active  %>
            <p class="text-success">有効</p>
            <% else %>
            <p>退会</p>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @customers %>