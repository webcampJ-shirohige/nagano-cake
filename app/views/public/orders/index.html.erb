<div class="container">
  <div class="row mt-3">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row mt-3">
    <table class="table table-hover">
      <thead class="thead-light"></thead>
      <th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th>
    </table>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          〒<%= order.post_code %>
          <%= order.address %>
          <%= order.name %>
        </td>
        </td>
      </tr>
    </tbody>
  </div>
  <% end %>