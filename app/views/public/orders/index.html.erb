<div class="container">
  <div class="row mt-3">
    <h2>注文履歴一覧</h2>
  </div>
  <div class="row mt-3">
    <table class="table table-hover">
      <thead class="thead-light"></thead>
      <th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th>
    </table>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          〒<%= order.post_code %>
          <%= order.address %>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |order_details| %>
            <% order_details.item.name %>
            <% end %>
        </td>
        <td><%= @billing.to_s(:delimited) %>円</td>
        <td><%= order.status_li8n %></td>
        <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
        </td>
      </tr>
      <% end %>
    </tbody>
  </div>
    <div class="row mt-3">
      <div class="col-lg-4"></div>
      <div class="col-lg-4">
        <%= paginate @orders %>
      </div>
      <div class="col-lg-4"></div>
  </div>
</div>