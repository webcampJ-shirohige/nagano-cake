<div class="container">
  <div class="row mt-3">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row mt-3">
    <div class="col-lg-8">
      <strong>注文情報</strong>
      <table class="table table-hover table-bordered">
        <tr>
          <td class="table-active"><strong>注文日</strong></td>
          <td><%= @order.created_at.strftime('%Y/%M/%D') %></td>
        </tr>
        <tr>
          <td class="table-active"><strong>配送先</strong></td>
          <td>
            〒<%= @order.post_code %>
            <%= @order.address %>
          </td>
        </tr>
        <tr>
          <td class="table-active"><strong>支払方法</strong></td>
          <td><%= @order.payment_method_il8n %></td>
        </tr>
        <tr>
          <td class="table-active"><strong>ステータス</strong></td>
          <td><%= @order.status_li8n %></td>
        </tr>
      </table>
    </div>
    <div class="col-lg-4">
      <strong>請求情報</strong>
      <table class="table table-hover table-bordered"></table>
    </div>
  </div>
</div>