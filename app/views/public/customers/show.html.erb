<div class="container">


<h4>マイページ</h4>

<h4>登録情報</h4>

<%= link_to "編集する", customers_mypage_edit_path, class: "btn btn-sm btn-success" %>

<table class="table table-borderd">
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.post_cord %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %> </td>
  </tr>
</table>

<h4>配送先</h4>
<%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %>

<h4>注文履歴</h4>
<%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %>


<%= link_to "ログアウト" , destroy_customer_session_path, method: :delete %>

</div>
