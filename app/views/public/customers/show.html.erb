<div class="container">

  <div class="row mt-5">
    <h2>マイページ</h2>
  </div>

  <div class="row my-3">
    <h4>登録情報</h4>
    <span class="mx-3"><%= link_to "編集する", customers_mypage_edit_path, class: "btn btn-sm btn-success" %></span>
  </div>

    <table class="table table-bordered">
      <tr>
        <th class="table-secondary">氏名</th>
        <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="table-secondary">カナ</th>
        <td><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="table-secondary">郵便番号</th>
        <td><%= @customer.post_cord %></td>
      </tr>
      <tr>
        <th class="table-secondary">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-secondary">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-secondary">メールアドレス</th>
        <td><%= @customer.email %> </td>
      </tr>
    </table>

  <div class="row my-2">
    <h4>配送先</h4>
    <span class="mx-3"><%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %></span>
  </div>

  <div class="row my-2">
    <h4>注文履歴</h4>
    <span class="mx-3"><%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %></span>
  </div>

    <%#ログアウトはヘッダーにありますがヘッダーが作られるまでの仮置きです %>
    <%= link_to "ログアウト" , destroy_customer_session_path, method: :delete %>

</div>








